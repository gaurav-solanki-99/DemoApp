<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_light_skyBlue"
    android:layout_height="match_parent">
     <RelativeLayout
         android:layout_marginTop="15dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/lltab"
         >
         <TextView
             android:id="@+id/tvheading"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="GOLD_3DEC2021"
             android:textSize="25sp"
             android:textStyle="bold"
             android:layout_centerHorizontal="true"
             android:textColor="@color/tv_color_darkblue"
             />

         <LinearLayout
             android:id="@+id/lltabBtn"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/tvheading"
             android:layout_centerHorizontal="true"
             android:layout_marginTop="15dp"

             android:orientation="horizontal">

             <TextView
                 android:id="@+id/btn_tab_market"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:drawableLeft="@drawable/ic_baseline_person_24"
                 android:drawableTint="@color/white"
                 android:text="Market"
                 android:textAlignment="center"
                 android:padding="10dp"
                 android:background="@drawable/bg_btn_tabunselected"
                 android:textColor="@color/white"
                 android:textSize="16dp" />

             <TextView
                 android:id="@+id/btn_tab_order"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"

                 android:background="@drawable/bg_btn_tab_selected"
                 android:drawableLeft="@drawable/ic_baseline_person_24"
                 android:drawableTint="@color/white"
                 android:padding="10dp"
                 android:text="Order "
                 android:textAlignment="center"
                 android:textColor="@color/white"
                 android:textSize="16dp" />
         </LinearLayout>

     </RelativeLayout>

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/llorderForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        >
         <EditText
             android:id="@+id/et1"
             android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Lot"
             />
        <EditText
            android:id="@+id/et2"
            android:layout_below="@+id/et1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lot"
            />

        <TextView
            android:id="@+id/btnorder"
            android:layout_below="@+id/et2"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/red"
            android:paddingHorizontal="5dp"
            android:paddingVertical="10dp"
            android:text="Place SELL Order"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
